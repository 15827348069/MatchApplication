<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/home_title"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="魔方头条" />
    </RelativeLayout>

    <com.zbmf.newmatch.view.ListViewForScrollView
        android:id="@+id/home_mf_head_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/group_layout_background" />

    <TextView
        android:id="@+id/tv_more_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/menu_button_select_tran"
        android:gravity="center"
        android:text="更多"
        android:textColor="@color/black_99"
        android:textSize="15sp" />
</LinearLayout>