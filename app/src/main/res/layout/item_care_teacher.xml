<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"
    >

    <com.zbmf.newmatch.view.RoundedCornerImageView
        android:id="@+id/home_teacher_avatar"
        android:layout_width="@dimen/teacher_avatar"
        android:layout_height="@dimen/teacher_avatar"
        android:background="@color/transparent"
        android:src="@drawable/avatar_default"
        />

    <TextView
        android:id="@+id/home_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="首山"
        android:textColor="@color/black_99"
        android:textSize="10sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/live_number"
            style="@style/number_text"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/care_live_textview"
            android:drawableStart="@drawable/care_live_textview"/>

        <TextView
            android:id="@+id/chat_number"
            style="@style/number_text"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:drawableLeft="@drawable/care_chat_textview"
            android:drawableStart="@drawable/care_chat_textview"/>
    </LinearLayout>
</LinearLayout>